<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>
<?import nigloo.gallerymanager.ui.AutoCompleteTextField?>
<?import nigloo.gallerymanager.ui.VScrollablePane?>

<fx:root
  title="Gallery Manager"
  type="Stage"
  xmlns="http://javafx.com/javafx/17"
  xmlns:fx="http://javafx.com/fxml/1">
  <scene>
    <Scene>
      <VBox>
        <children>
          <MenuBar>
            <menus>
              <Menu
                mnemonicParsing="false"
                text="File">
                <items>
                  <MenuItem
                    mnemonicParsing="false"
                    onAction="#saveGallery"
                    text="Save" />
                </items>
              </Menu>
            </menus>
          </MenuBar>
          <TabPane
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="800.0"
            prefWidth="1200.0"
            tabClosingPolicy="UNAVAILABLE">
            <tabs>
              <Tab text="Gallery">
                <content>
                  <SplitPane dividerPositions="0.5">
                    <items>
                      <VBox id="left_part">
                        <children>
                          <Label text="Scan result" />
                          <AutoCompleteTextField
                            fx:id="tagFilterField"
                            styleClass="tag-filter-field" />
                          <ScrollPane
                            hbarPolicy="NEVER"
                            styleClass="tag-list">
                            <content>
                              <VBox fx:id="tagListView" />
                            </content>
                          </ScrollPane>
                          <TreeView
                            id="file_system_view"
                            fx:id="fileSystemView" />
                        </children>
                      </VBox>
                      <VScrollablePane
                        id="thumbnails_view"
                        fx:id="thumbnailsView" />
                    </items>
                  </SplitPane>
                </content>
              </Tab>
              <Tab text="Artists" />
              <Tab text="Scripts">
                <content>
                  <VBox styleClass="script-pane-list">
                    <children>
                      <VBox styleClass="script-pane">
                        <children>
                          <Label
                            fx:id="afterGalleryLoadScriptTitle"
                            styleClass="script-title"
                            text="After Gallery loaded" />
                          <TextArea
                            fx:id="afterGalleryLoadScript"
                            styleClass="script-text-input" />
                          <HBox styleClass="script-button-bar">
                            <children>
                              <Button
                                mnemonicParsing="false"
                                onAction="#saveAfterGalleryLoadScript"
                                text="Save" />
                              <Button
                                mnemonicParsing="false"
                                onAction="#reloadAfterGalleryLoadScript"
                                text="Reload" />
                              <Button
                                mnemonicParsing="false"
                                onAction="#runAfterGalleryLoadScript"
                                text="Run" />
                            </children>
                          </HBox>
                          <TitledPane
                            animated="false"
                            text="Output">
                            <content>
                              <TextArea
                                fx:id="afterGalleryLoadScriptOutput"
                                prefHeight="200.0"
                                prefWidth="200.0" />
                            </content>
                          </TitledPane>
                        </children>
                      </VBox>
                    </children>
                  </VBox>
                </content>
              </Tab>
            </tabs>
          </TabPane>
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>
